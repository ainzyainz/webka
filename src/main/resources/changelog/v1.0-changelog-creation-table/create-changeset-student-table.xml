<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create_table_student" author="via">
        <createTable tableName="student">
            <column name="id" autoIncrement="true" type="int">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="varchar(200)"/>
            <column name="surname" type="varchar(200)"/>
            <column name="age" type="int"/>
            <column name="mark" type="int"/>
            <column name="address" type="varchar(200)"/>
            <column name="user_id" type="int"/>
            <column name="country_id" type="int"/>
        </createTable>

        <addForeignKeyConstraint
                baseColumnNames="user_id"
                baseTableName="student"
                baseTableCatalogName="webapp"
                constraintName="fk_user_id"
                onUpdate="CASCADE"
                onDelete="NO ACTION"
                referencedColumnNames="id"
                referencedTableName="user"
                referencedTableCatalogName="webapp"
                referencedTableSchemaName="webapp"
        />
        <addForeignKeyConstraint
                baseColumnNames="country_id"
                baseTableName="student"
                baseTableCatalogName="webapp"
                constraintName="fk_country_id"
                onUpdate="CASCADE"
                onDelete="CASCADE"
                referencedColumnNames="id"
                referencedTableName="country"
                referencedTableCatalogName="webapp"
                referencedTableSchemaName="webapp"
        />
    </changeSet>
</databaseChangeLog>